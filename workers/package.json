{
  "name": "nw-london-edge-workers",
  "version": "1.0.0",
  "description": "Cloudflare Workers for NW London Local Ledger edge caching",
  "main": "edge-cache.ts",
  "scripts": {
    "dev": "wrangler dev edge-cache.ts",
    "dev:invalidation": "wrangler dev cache-invalidation.ts",
    "build": "tsc --noEmit",
    "deploy": "wrangler publish edge-cache.ts",
    "deploy:invalidation": "wrangler publish cache-invalidation.ts --name nw-london-cache-invalidation",
    "deploy:all": "npm run deploy && npm run deploy:invalidation",
    "tail": "wrangler tail",
    "test": "jest",
    "format": "prettier --write '**/*.{ts,js,json,md}'"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wrangler": "^3.25.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "edge",
    "cache",
    "cdn"
  ],
  "author": "NW London Local Ledger",
  "license": "MIT"
}