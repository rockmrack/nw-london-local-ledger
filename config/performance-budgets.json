  "thresholds": {
    "warning": 0.9,
    "error": 0.8
  },
  "monitoring": {
    "enabled": true,
    "providers": ["lighthouse", "webpagetest", "speedcurve"],
    "frequency": "daily",
    "alerts": {
      "email": ["team@nwlondonledger.com"],
      "slack": "#performance-alerts"
    }
  },
  "optimization": {
    "criticalCss": {
      "enabled": true,
      "inline": true,
      "maxSize": 15000
    },
    "images": {
      "formats": ["avif", "webp"],
      "lazyLoad": true,
      "placeholders": "blur",
      "optimization": "aggressive"
    },
    "javascript": {
      "splitting": true,
      "minification": "aggressive",
      "treeShaking": true,
      "deadCodeElimination": true,
      "modernSyntax": true
    },
    "fonts": {
      "subset": true,
      "preload": true,
      "display": "swap",
      "variableFonts": true
    },
    "compression": {
      "brotli": true,
      "gzip": true,
      "minLevel": 11
    }
  },
  "targets": {
    "browsers": [">0.25%", "not dead"],
    "node": "18.0.0"
  }
}